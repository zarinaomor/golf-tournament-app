<body>
    <div class="container">
        <header>
            <h1 class="title"><%=tournament.eventName%> </h1>
        </header>
        <main>
            <section class="left-side">
                <h3>ParTee Details</h3>
                <ul class="details">
                    <li class="detail">
                        Golf Course: <%=tournament.golfCourse%>
                    </li>
                    <li class="detail">
                        <% for(let i = 0; i < golfCourses.length; i++){ %>
                          <% if(tournament.golfCourse === golfCourses[i].name){ %>
                              Address: <%=golfCourses[i].address%><br/><%=`${golfCourses[i].city} ${golfCourses[i].state} ${golfCourses[i].postal}`%>
                          <% } %>
                        <% } %>
                    </li>
                    <li class="detail">
                        Date: <%=tournament.eventDate.toDateString()%>
                    </li>
                    <li class="detail"> 
                        Estimated tee-time: <%=tournament.eventDate.getUTCHours()%>:<%=tournament.eventDate.getMinutes()%>0
                    </li>
                    <li class="detail">
                        Max Field Size: <%=tournament.groupSize%>
                    </li>
                    <li class="detail">
                        Current Players: <%=tournament.players.length%>
                        <div class="player-grid">
                        <% for(let i = 0; i < tournament.players.length; i++){ %>
                          <ul>
                          <li class="players"><%=tournament.players[i].firstName%></li>
                          </ul>
                          <% } %>
                        </div>
                    </li>
                    <li class="detail">
                         Category: <a class="cat" href="/tour/cat/<%=tournament.category%>"><%=tournament.category%></a>
                    </li>
                </ul>
            </section>
            <% for(let i = 0; i < golfCourses.length; i++){ %>
              <% if(tournament.golfCourse === golfCourses[i].name){ %>
                <aside>
                  <img class="image" src=<%=golfCourses[i].img%>>
                </aside>
              <% } %> 
            <% } %>
            <section class="right-side">
                <h3>Description</h3>
                <ul class="details">
                    <li class="detail">Host: <%=name%> <%=last%></a></li>
                    <li class="detail"><%=tournament.description%></li>
                </ul>
            </section>
        </main>
        <footer> 
        <% if(tournament.groupSize > 1000){ %>
            <% } else { %>

            <%let m=0
                for (j=0;j<=tournament.players.length;j++){
                    if(tournament.players[j]== userId){m=1;
            %>             
            <form action="/tour/<%=tournament._id%>?_method=DELETE" method="post">
              <input class="btn btn-danger" type="submit" value="Unregister"/>
            </form><%
        
            }
        } if (m==0 && tournament.groupSize > tournament.players.length){
    %> <form action="/tour/<%=tournament._id%>?_method=PUT" method="post">
                <input class="btn btn-success" type="submit" value="Sign Up"/>
            </form>            <%
} else if (m==0){
    %>            <form>
                <input class="btn btn-danger" type="submit" value="Full"/>
            </form><%
}%> 
            <br/> 
            </div>    
            <% } %>
        <br/> 
        <%if(tournament.host==userId){%>
        <form >
                <input class="btn btn-success" href="/tour/<%=tournament._id%>/edit"type="submit" value="Edit"/>
            </form>  <%}%>
                                <%if(tournament.host._id==userId){%>            <div class="home-btn">
                <button type="button" class="btn btn-primary btn-lg"> <a href="/tour/<%=tournament._id%>/edit" style="color: white">Edit</a></button>
            </div>
<br/><%}%>
        </footer>
    </div>
<script> 
  $(".navbar-toggler").click(()=>{
    $(this).removeClass("collapsed");
    $(this).attr("aria-expanded", "true");
    $(".navbar-collapse").toggleClass("show");
  });
</script>
</body>
</html>